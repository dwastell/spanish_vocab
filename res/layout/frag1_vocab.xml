<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center|fill_vertical"
	android:orientation="vertical"
	android:background="#ffffff">

	<Button
		android:id="@+id/direction"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/EngSpan"
		android:textSize="30sp"
		android:background="@drawable/clever_button"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:layout_marginBottom="20dp"
		android:padding="10dp"
		android:layout_marginTop="30dp"
		android:lines="1"/>

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center|fill_vertical"
			android:orientation="vertical"
			android:background="@android:color/transparent">

			<TextView
				android:id="@+id/lang1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:background="@drawable/back"
				android:lines="2"
				android:textSize="20sp"
				android:layout_margin="15dp"
				android:padding="8dp"/>

			<TextView
				android:id="@+id/lang2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:background="@drawable/back"
				android:lines="2"
				android:textSize="20sp"
				android:layout_margin="15dp"
				android:padding="8dp"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/lastRev"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textSize="15sp"/>

				<Button
					android:id="@+id/show_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/show"
					android:textAlignment="center"
					android:lines="1"/>

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal"
				android:layout_marginTop="10dp">

				<TextView
					android:id="@+id/level"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="10dp"
					android:textAppearance="?android:attr/textAppearanceMedium"/>

				<Button
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/upLevel"
					android:text="\u25b2"
					android:background="@android:color/transparent"
					android:layout_marginRight="0dp"
					android:layout_marginLeft="0dp"
					android:textSize="25sp"/>

				<Button
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="\u25bc"
					android:id="@+id/downLevel"
					android:background="@android:color/transparent"
					android:layout_marginLeft="-20dp"
					android:textSize="25sp"/>

			</LinearLayout>

			<HorizontalScrollView
				android:id="@+id/horizontalscrollView"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="horizontal"
					android:layout_marginTop="10dp">

					<Button
						android:id="@+id/next_button"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:text="\u25b6"
						android:textColor="#878787"
						android:paddingBottom="6dp"
						android:background="@drawable/back"
						android:textSize="40dp"
						android:textAlignment="center"/>

					<Button
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="Filter: ALL"
						android:layout_margin="10dp"
						android:id="@+id/changeFilter"
						android:lines="1"/>

					<Button
						android:id="@+id/periodButton"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:text="ALL TIME"
						android:lines="1"/>

				</LinearLayout>

			</HorizontalScrollView>

			<TextView
				android:id="@+id/showScore"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Score: 2.4"
				android:layout_margin="10dp"
				android:textAppearance="?android:attr/textAppearanceMedium"/>

		</LinearLayout>

	</ScrollView>

</LinearLayout>

